{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "mdbook",
            "args": [
                "serve",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile Recipe",
            "type": "shell",
            "command": "pandoc",
            "args": [
                "-o",
                "docs/pdf/${fileBasenameNoExtension}.pdf",
                "Recipes/${fileBasename}"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "mdbook",
            "args": [
                "build",
            ],
            "problemMatcher": []
        }
    ]
}